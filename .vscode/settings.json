{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.bracketPairColorization.enabled": true,
  "editor.tabSize": 2,
  "search.exclude": { "**/node_modules": true, "**/bower_components": true },
  "git.confirmSync": false,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "file-icons",
  "javascript.preferences.quoteStyle": "double",
  "typescript.preferences.quoteStyle": "double",
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[feature]": {
    "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
  },
  "files.exclude": {
    "**/node_modules": false
  },
  "cypressHelper.cucumberFixtureAutocompleteOnQuotes": true,
  "cypressHelper.cucumberTagsAutocomplete": {
    "enable": true,
    "allurePlugin": true,
    "tags": ["focus", "ignore"]
  },
  "cucumberautocomplete.syncfeatures": "cypress/e2e/**/*.feature",
  "cucumberautocomplete.stepRegExSymbol": "true",
  "cucumberautocomplete.strictGherkinCompletion": true,
  "cucumberautocomplete.strictGherkinValidation": true,
  "cucumberautocomplete.smartSnippets": true,
  "cucumberautocomplete.stepsInvariants": true,
  "prettier.configPath": ".prettierrc",
  "liveServer.settings.port": 5501
}
